
.container{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  width: 92%;
  margin-left: 30rpx;
}
.imageview{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  width: 18%;
  height: 80%;
}
.image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx
}
.stateimage{
  width:25rpx;
  height:25rpx;
  margin-left: -15rpx;
  margin-top: -5rpx
}
.right{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 160rpx;
  border-bottom: 1rpx solid  rgb(240, 238, 238);
  width: 85%;
}
.textview{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 80%;
  height: 60%
}
.text1{
  font-size: 35rpx;
}
.text2{
  font-size: 30rpx;
  color: rgb(146, 145, 145);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.timeview{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-start;
  height: 60%;
}
.text3{
  font-size: 28rpx;
  color: rgb(146, 145, 145);
}