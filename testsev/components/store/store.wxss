  align-content: center;
}
.first{
  margin-top: 10rpx;
  display: flex;
  border-bottom: 1rpx solid rgb(212, 208, 208);
  flex-direction: row;
  justify-content: space-around;
  width: 95%;
}
.second{
  display: flex;
  flex-direction: row;
  width: 35%
}
.image{
  padding-bottom: 10rpx;
